
<section id="viewAddhotel">
    <h2>Edit existing hotel</h2>
    <form id="formAddhotel" action="/hotels/edit/{{hotelData._id}}" method="POST">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="name" value="{{hotelData.name}}" >
        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{hotelData.city}}">
        <label for="free-rooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="rooms" value="{{hotelData.rooms}}">
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imageUrl" value="{{hotelData.imageUrl}}">

        <input type="submit" class="create" value="Edit">
    </form>
</section>
